'''
class Node:
    def __init__(self, val):
        self.data = val
        self.right = None
        self.left = None
'''
from collections import deque
class Solution:
    def bottomView(self, root):
        # code here
        #bfs+hd
        queue = deque()
        hashmap = {}
        queue.append([root,0])
        while queue:
            ele,pos = queue.popleft()
            if pos not in hashmap:
                hashmap[pos] = [ele.data]
            else:
                hashmap[pos].append(ele.data)
            if ele.left:
                queue.append([ele.left,pos-1])
            if ele.right:
                queue.append([ele.right,pos+1])
        lis = []
        for key,val in hashmap.items():
            lis.append(key)
        lis.sort()
        res = []
        for i in lis:
            res.append(hashmap[i][-1])
        return res
        
        
        
