class Solution:
    def lowerBound(self, arr, target):
        i=0
        n = len(arr)
        j = n-1
        while i<j:
            mid = (i+j)//2
            if arr[mid]>=target:
                j =mid
            else:
                i=mid+1
        if arr[i]>=target:
            return i
        return n
