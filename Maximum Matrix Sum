class Solution:
    def maxMatrixSum(self, matrix: List[List[int]]) -> int:
        n = len(matrix)
        m = len(matrix[0])
        count = 0
        smallest = float('inf')
        total_sum = 0
        for i in range(n):
            for j in range(m):
                total_sum+=abs(matrix[i][j]) #total abs sum
                if matrix[i][j]<0:
                    count+=1 #count no. of -ve ele
                smallest = min(smallest,abs(matrix[i][j])) #cal smallest ele,so that we can filp this to -ve 

        if count%2!=0: #if odd no of -ve ele, then one -ve shold be left 
            return total_sum -(2*smallest) #one -ve should be the least -ve
        return total_sum

        
