class Solution:
    def longestConsecutive(self, nums: List[int]) -> int:
        #idea is to find starting point of a possible sequence
        #use starting point to check if next possible ele in nums
        #if yes , keep cal len , else, go to next startign point
        lookup = set(nums)
        longest = 0
        for num in lookup:
            if num-1 not in lookup: #starting of new sequence
                length = 0
                while (num+length) in lookup: #cal seq
                    length+=1
                longest = max(longest,length)
        return longest
                
        
