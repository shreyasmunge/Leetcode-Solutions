class Solution:
    def removeOuterParentheses(self, s: str) -> str:
        stack = []
        n = len(s)
        i=0
        res = ""
        while i<n:
            stack.append(s[i])
            while stack:
                i+=1
                if s[i]=='(':
                    res+='('
                    stack.append(s[i])
                else:
                    stack.pop()
                    if len(stack)!=0:
                        res+=')'
            i+=1
        return res


