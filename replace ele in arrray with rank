#User function Template for python3
import heapq
class Solution:
    def replaceWithRank(self, N, arr):
        # Code here
        queue = []
        for num in arr:
            heapq.heappush(queue,num)
        count = 1
        store = {}
        for i in range(N):
            ele = heapq.heappop(queue)
            if ele not in store:
                store[ele] = count
                count+=1
        for i in range(N):
            arr[i] = store[arr[i]]
        return arr
            
            
        
