class Solution:
    def minAddToMakeValid(self, s: str) -> int:
        stack = []
        close,open =0,0
        for c in s:
            if c=='(':
                #stack.append('(')
                open+=1
            else:
                if open>0:
                #if stack:
                    #stack.pop()
                    open-=1
                else:
                    close+=1
        return open+close
