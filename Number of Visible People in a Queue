class Solution:
    def canSeePersonsCount(self, heights: List[int]) -> List[int]:
        stack = []
        n = len(heights)
        res = [0]*n
        for i in range(n):
            while stack and heights[i]>heights[stack[-1]]:
                idx = stack.pop()
                res[idx] +=1
            if stack:
                res[stack[-1]]+=1
            stack.append(i)
        return res
              
            
