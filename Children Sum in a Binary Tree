'''
# Node Class:
class Node:
    def init(self,val):
        self.data = val
        self.left = None
        self.right = None
'''

class Solution:
    def isSumProperty(self, root):
        # code here
        def postorder(node):
            if not node:
                return True
            if node.left==None and node.right ==None:
                return True
            
            left = node.left.data if node.left else 0
            right = node.right.data if node.right else 0
            if left+right != node.data:
                return False
            return postorder(node.left) and postorder(node.right)
        return postorder(root)
        
                
            
