import collections,heapq
class Solution:
    def minCost(self, n: int, edges: List[List[int]]) -> int:
        adj = collections.defaultdict(list)
        for u,v,w in edges:
            adj[u].append([v,w])
            adj[v].append([u,2*w])

        queue = []
        heapq.heappush(queue,(0,0))
        distance = [float('inf')]*n
        distance[0] = 0
        while queue:
            cur_dist,cur_node = heapq.heappop(queue)
            if cur_dist>distance[cur_node]:
                continue
    
            for nei,nei_dist in adj[cur_node]:
                if cur_dist+nei_dist<distance[nei]:
                    distance[nei] = cur_dist+nei_dist
                    heapq.heappush(queue,(distance[nei],nei))
        if distance[n-1]==float('inf'):
            return -1
        return distance[n-1]

